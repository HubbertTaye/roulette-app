<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Casino House</title>
    <link rel="stylesheet" href="css/master.css">
  </head>
  <body>
    <h1>Owner Money, Wins, and Losses</h1>
    <ul class="stats">
      <% for(var i=0; i<stats.length; i++) {%>
        <li class="stats">
          <p><%= `House Total: $${stats[i].monies}` %></p>
          <p><%= `Total amount of users winning: ${stats[i].wins}` %></p>
          <p><%= `Total amount of users loses: ${stats[i].losses}` %></p>
        </li>
      <% } %>
    </ul>
    <section class="wins"></section>
    <section class="losses"></section>
    <form action="/owner" class="" method="post">
      <input type="text" name="stats" value="">
      <button type="submit" name="button">Update funds</button>
    </form>
    <section class="monies"></section>
    <script src="owner.js" type="text/javascript"></script>
  </body>
</html>
